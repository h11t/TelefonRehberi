@using TelefonRehberi.Entity
@model IEnumerable<TelefonRehberi.Entity.Calisan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h1 class="page-title">Çalışan Listesi</h1>
<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>Anasayfa</a></li>
    <li><a href="#">Çalışan Listesi</a></li>

</ol>
<div class="row">
    <div class="col-lg-12 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Çalışan Listesi</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>

                                <th> Adı</th>
                                <th> Soyadı</th>
                                <th>Telefon</th>
                                <th>Departman</th>
                                @*<th>Yönetici Bilgisi</th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr id="CalisanList_@item.Id" class="gradeX">



                                    <td>@item.Ad</td>
                                    <td>@item.Soyad</td>
                                    <td>
                                        @item.Telefon
                                    </td>
                                    <td>@item.Departman.Ad</td>
                                    @*<td>
                                            @{
                                                var c = new Calisan();

                                                if (item.YoneticiBilgisiId != 0)
                                                {
                                                    c = new Calisan { Id = (int)item.YoneticiBilgisiId };
                                                }
                                               (c.Ad + " " + c.Soyad).ToString();
                                            }
                                        </td>*@
                                    <td>
                                        <a class="btn btn-sm btn-red" onclick="CalisanSil('@item.Id')">Sil</a>

                                        <a class="btn btn-sm btn-blue" href="@Url.Action("Edit","Calisan", new { id=@item.Id })">Düzenle</a>
                                    </td>
                                   
                                </tr>


                            }


                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


