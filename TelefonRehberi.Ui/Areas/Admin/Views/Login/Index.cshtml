

@{
    Layout = null;
}

@model TelefonRehberi.Ui.Areas.Admin.Models.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> Login</title>
    <!-- Site favicon -->
    <link rel='shortcut icon' type='image/x-icon' href='images/favicon.ico' />
    <!-- /site favicon -->
    <!-- Entypo font stylesheet -->
    <link href="@ViewBag.Path/css/entypo.css" rel="stylesheet">

    <!-- /entypo font stylesheet -->
    <!-- Font awesome stylesheet -->
    <link href="@ViewBag.Path/css/font-awesome.min.css" rel="stylesheet">
    <!-- /font awesome stylesheet -->
    <!-- CSS3 Animate It Plugin Stylesheet -->
    <link href="@ViewBag.Path/css/plugins/css3-animate-it-plugin/animations.css" rel="stylesheet">
    <!-- /css3 animate it plugin stylesheet -->
    <!-- Bootstrap stylesheet min version -->
    <link href="@ViewBag.Path/css/bootstrap.min.css" rel="stylesheet">
    <!-- /bootstrap stylesheet min version -->
    <!-- Mouldifi core stylesheet -->
    <link href="@ViewBag.Path/css/mouldifi-core.css" rel="stylesheet">
    <!-- /mouldifi core stylesheet -->

    <link href="@ViewBag.Path/css/mouldifi-forms.css" rel="stylesheet">
</head>

<body class="login-page">
    <div class="login-pag-inner">
        <div class="animatedParent animateOnce z-index-50">
            <div class="login-container animated growIn slower">
                
                <div class="login-content">
                    <h2><strong>Hoşgeldiniz</strong>, giriş yapın</h2>


                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@

                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.KullaniciAdi)


                            @Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control", @placeholder = "UserName" })
                        </div>
                        <div class="form-group">
                            @Html.ValidationMessageFor(model => model.Sifre)
                            @Html.PasswordFor(model => model.Sifre, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <div class="form-group">
                            @*	 <div class="checkbox checkbox-replace">
                                  <input type="checkbox" id="remeber">
                                  <label for="remeber">Remeber me</label>
                                </div>*@

                            @if (@ViewBag.ErrorText != null)
                            {
                                <div class="alert alert-danger" role="alert"><strong>Hata!</strong> @ViewBag.ErrorText </div>
                            }

                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Giriş Yap</button>
                        </div>
                        <p class="text-center"><a href="#">Şifremi unuttum?</a></p>

                    }




                </div>
            </div>
        </div>
    </div>
    <!--Load JQuery-->
    <script src="@ViewBag.Path/js/jquery.min.js"></script>
    <!-- Load CSS3 Animate It Plugin JS -->

    <script src="@Url.Content("/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    <script src="@ViewBag.Path/js/plugins/css3-animate-it-plugin/css3-animate-it.js"></script>
    <script src="@ViewBag.Path/js/bootstrap.min.js"></script>
</body>
</html>
