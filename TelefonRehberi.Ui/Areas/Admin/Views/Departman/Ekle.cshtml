
@model TelefonRehberi.Entity.Departman
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}




<h1 class="page-title">Departman Ekle</h1>
<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
    <li><a href="#">Departman Ekle</a></li>

</ol>
<div class="row">
    <div class="col-lg-6 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Departman Ekle</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">


                @using (Html.BeginForm("Ekle", "Departman", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    if (@ViewBag.ErrorText != null)
                    {
                        <div class="alert alert-danger" role="alert"><strong>Hata!</strong> @ViewBag.ErrorText </div>
                    }
                    if (ViewBag.SuccessText != null)
                    {
                        <div class="alert alert-success" role="alert"><strong>Başarılı!</strong> @ViewBag.SuccessText </div>
                    }
                    <div class="form-group">
                        <label for="emailaddress">Departman Ad    </label>
                        @Html.ValidationMessageFor(model => model.Ad)
                        @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", @placeholder = "Departman Adı" })
                    </div>
                    <button type="submit" class="btn btn-primary">Gönder</button>
                }
            </div>
        </div>
    </div>

</div>

@section footerjs{


    <script src="@Url.Content("/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    }

