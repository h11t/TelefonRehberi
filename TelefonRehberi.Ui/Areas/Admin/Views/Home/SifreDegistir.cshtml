
@model TelefonRehberi.Ui.Areas.Admin.Models.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style type="text/css">

    .kutu {
        width: 200px;
        height: 200px;
        float: left;
    }

    .resimkutu {
        width: 190px;
        height: 140px;
        padding: 5px;
        border: solid #666 1px;
    }
</style>





<h1 class="page-title">Şifre Değiştir</h1>
<!-- Breadcrumb -->
<ol class="breadcrumb breadcrumb-2">
    <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
    <li><a href="#">Şifre Değiştir</a></li>

</ol>
<div class="row">
    <div class="col-lg-6 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Şifre Değiştir</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>

            <div class="panel-body">


                @{using (Html.BeginForm("SifreDegistir", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {


                        <div class="form-group">
                            @Html.LabelForModel("Eski Sifre")
                            @Html.TextBox("Sifre", null, new { @class = "form-control required" })
                            @*@Html.PasswordFor(x=>x.Sifre, new { @class = "form-control required" })*@
                        </div>
                        <div class="form-group">
                            @Html.LabelForModel("Yeni Sifre")
                            @Html.TextBox("YeniSifre", null, new { @class = "form-control required" })
                            @*@Html.PasswordFor(x=>x.Sifre, new { @class = "form-control required" })*@
                        </div>

                        <button type="submit" class="btn btn-primary">Gönder</button>

                    } }

            </div>


        </div>

    </div>

</div>


<script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
        CKEDITOR.replace('editor1');
</script>



@section footerjs{


    <script src="@Url.Content("/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


}

