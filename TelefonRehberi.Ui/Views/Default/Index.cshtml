@model TelefonRehberi.Ui.Models.ViewModel.CalisanViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Çalışan Listesi</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model.CalisanList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        
        <td>
          
            @Html.ActionLink("Detay", "Details", new {id=item.Id}) 
           
        </td>
    </tr>
}

</table>
